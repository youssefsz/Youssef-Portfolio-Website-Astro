---
// Navbar Component - Clean minimal navigation
import Logo from "./Logo.astro";
---

<nav
    class="fixed top-0 left-0 right-0 z-50 bg-black/80 backdrop-blur-md border-b border-white/5"
>
    <div class="container-main">
        <div class="flex items-center justify-between h-20">
            <!-- Logo -->
            <a
                href="/"
                class="flex items-center gap-2 group"
                id="nav-logo"
                aria-label="Home"
            >
                <Logo />
            </a>

            <!-- Navigation Links - Desktop -->
            <div class="hidden lg:flex items-center gap-8">
                <a
                    href="#home"
                    class="link-hover text-sm uppercase tracking-wider font-medium"
                    id="nav-home"
                >
                    Home
                </a>
                <a
                    href="#projects"
                    class="link-hover text-sm uppercase tracking-wider font-medium"
                    id="nav-projects"
                >
                    Projects
                </a>
                <a
                    href="#skills"
                    class="link-hover text-sm uppercase tracking-wider font-medium"
                    id="nav-skills"
                >
                    Skills
                </a>
                <a
                    href="#experience"
                    class="link-hover text-sm uppercase tracking-wider font-medium"
                    id="nav-experience"
                >
                    Experience
                </a>
                <a
                    href="#testimonials"
                    class="link-hover text-sm uppercase tracking-wider font-medium"
                    id="nav-testimonials"
                >
                    Testimonials
                </a>
                <a
                    href="#contact"
                    class="link-hover text-sm uppercase tracking-wider font-medium"
                    id="nav-contact"
                >
                    Contact
                </a>
            </div>

            <!-- CTA Button -->
            <a
                href="#projects"
                class="btn-secondary hidden lg:inline-flex text-xs py-3 px-6"
                id="nav-cta"
            >
                <span>Explore Projects</span>
            </a>

            <!-- Mobile Menu Button -->
            <button
                class="lg:hidden w-10 h-10 flex items-center justify-center border border-white/10"
                id="mobile-menu-btn"
                aria-label="Toggle menu"
            >
                <div class="space-y-1.5">
                    <span
                        class="block w-5 h-0.5 bg-white transition-all"
                        id="menu-line-1"></span>
                    <span
                        class="block w-5 h-0.5 bg-white transition-all"
                        id="menu-line-2"></span>
                </div>
            </button>
        </div>
    </div>

    <!-- Mobile Menu Overlay -->
    <div
        id="mobile-menu-overlay"
        class="fixed inset-0 bg-black/90 backdrop-blur-sm z-[60] hidden transition-opacity duration-300 opacity-0"
    >
    </div>

    <!-- Mobile Menu Drawer -->
    <div
        id="mobile-menu-drawer"
        class="fixed inset-y-0 right-0 w-[85%] max-w-sm bg-black border-l border-white/10 z-[70] transform translate-x-full transition-transform duration-300 ease-in-out flex flex-col h-screen shadow-2xl shadow-black"
    >
        <div
            class="p-6 flex justify-between items-center border-b border-white/5"
        >
            <span class="text-xl font-bold uppercase tracking-wider text-white"
                >Menu</span
            >
            <button
                id="close-menu-btn"
                class="p-2 text-white/70 hover:text-white transition-colors"
                aria-label="Close menu"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="lucide lucide-x"
                    ><path d="M18 6 6 18"></path><path d="m6 6 12 12"
                    ></path></svg
                >
            </button>
        </div>

        <nav class="flex-1 overflow-y-auto p-8 flex flex-col gap-8">
            <a
                href="#home"
                class="mobile-nav-link text-2xl font-bold uppercase tracking-widest text-white/80 hover:text-white transition-colors"
                >Home</a
            >
            <a
                href="#projects"
                class="mobile-nav-link text-2xl font-bold uppercase tracking-widest text-white/80 hover:text-white transition-colors"
                >Projects</a
            >
            <a
                href="#skills"
                class="mobile-nav-link text-2xl font-bold uppercase tracking-widest text-white/80 hover:text-white transition-colors"
                >Skills</a
            >
            <a
                href="#experience"
                class="mobile-nav-link text-2xl font-bold uppercase tracking-widest text-white/80 hover:text-white transition-colors"
                >Experience</a
            >
            <a
                href="#testimonials"
                class="mobile-nav-link text-2xl font-bold uppercase tracking-widest text-white/80 hover:text-white transition-colors"
                >Testimonials</a
            >
            <a
