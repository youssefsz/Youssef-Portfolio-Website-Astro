---
import BlurFade from "../animations/BlurFade";
import { experience, education } from "../../data/experience";
---

<section class="py-32 relative" id="experience">
  <!-- Section Background -->
  <div class="absolute inset-0 grid-bg opacity-30"></div>

  <div class="container-main relative z-10">
    <!-- Section Header - Centered -->
    <div class="text-center mb-20 flex flex-col items-center">
      <BlurFade client:load delay={0} yOffset={20}>
        <div class="number-display mb-4">// 03</div>
      </BlurFade>

      <h2 class="display-lg mb-6">
        <BlurFade client:load delay={200} yOffset={20}>
          <span class="block">Experience &</span>
          <span class="text-outline-hover">
            <span class="outline-text">Education</span>
            <span class="filled-text" aria-hidden="true">Education</span>
          </span>
        </BlurFade>
      </h2>

      <BlurFade client:load delay={400} yOffset={20}>
        <p class="text-muted text-lg max-w-2xl mx-auto">
          My professional journey and academic background.
        </p>
      </BlurFade>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 lg:gap-24">
      <!-- Experience Column -->
      <div class="flex flex-col gap-10">
        <BlurFade client:load delay={0.2} yOffset={20}>
          <h3 class="text-2xl font-bold mb-6 flex items-center justify-center gap-3">
            <span class="text-accent">//</span> Experience
          </h3>
        </BlurFade>

        <div class="relative border-l border-white/10 ml-3 md:ml-6 space-y-8 pl-6 md:pl-8 pb-4">
          {experience.map((item, index) => (
            <BlurFade client:load delay={0.3 + index * 0.1} yOffset={20}>
              <div class="relative group">
                <!-- Timeline Dot -->
                <span class="absolute -left-[32.5px] md:-left-[42px] top-6 h-4 w-4 md:h-5 md:w-5 rounded-full border border-white/20 bg-black group-hover:border-accent transition-colors duration-300 z-20 flex items-center justify-center">
                  <span class="h-1.5 w-1.5 md:h-2 md:w-2 rounded-full bg-white/20 group-hover:bg-accent transition-colors duration-300"></span>
                </span>
                
                <!-- Card -->
                <div class="service-card p-6 md:p-8 group/card">
                    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-4 relative z-10">
                        <div>
                            <h4 class="text-xl font-bold text-white group-hover/card:text-accent transition-colors">{item.title}</h4>
                            <p class="text-muted font-medium mt-1">{item.company}</p>
                        </div>
                        <span class="inline-flex items-center px-3 py-1 bg-white/5 border border-white/10 text-xs font-mono text-accent whitespace-nowrap">
                            {item.date}
                        </span>
                    </div>
                    
                    <p class="text-muted-foreground leading-relaxed text-sm md:text-base relative z-10 mb-6">
                        {item.description}
                    </p>

                    {item.stats && (
                        <div class="relative z-10 pt-6 border-t border-white/5">
                            <div class="grid grid-cols-3 gap-4">
                                {item.stats.map((stat) => (
                                    <div class="flex flex-col">
                                        <span class="text-[10px] uppercase tracking-wider text-muted font-semibold mb-1">{stat.label}</span>
                                        <span class="text-lg font-mono text-white font-medium group-hover/card:text-accent transition-colors">{stat.value}</span>
                                    </div>
                                ))}
                            </div>
                        </div>
                    )}

                    {item.link && (
                        <div class="relative z-10 mt-6 pt-4 border-t border-white/5 flex justify-start">
                            <a
                                href={item.link}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="inline-flex items-center gap-2 text-sm font-medium text-accent hover:text-white transition-colors group/link"
                            >
                                <span>View Profile</span>
                                <svg
                                    class="w-4 h-4 transform group-hover/link:translate-x-1 transition-transform"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="square"
                                        stroke-linejoin="miter"
                                        stroke-width="1.5"
                                        d="M17 8l4 4m0 0l-4 4m4-4H3"
                                    ></path>
                                </svg>
                            </a>
                        </div>
                    )}
                </div>
              </div>
            </BlurFade>
          ))}
        </div>
      </div>

      <!-- Education Column -->
      <div class="flex flex-col gap-10">
        <BlurFade client:load delay={0.4} yOffset={20}>
            <h3 class="text-2xl font-bold mb-6 flex items-center justify-center gap-3">
                <span class="text-accent">//</span> Education
            </h3>
        </BlurFade>

        <div class="relative border-l border-white/10 ml-3 md:ml-6 space-y-8 pl-6 md:pl-8 pb-4">
          {education.map((item, index) => (
            <BlurFade client:load delay={0.5 + index * 0.1} yOffset={20}>
              <div class="relative group">
                <!-- Timeline Dot -->
                <span class="absolute -left-[32.5px] md:-left-[42px] top-6 h-4 w-4 md:h-5 md:w-5 rounded-full border border-white/20 bg-black group-hover:border-accent transition-colors duration-300 z-20 flex items-center justify-center">
                    <span class="h-1.5 w-1.5 md:h-2 md:w-2 rounded-full bg-white/20 group-hover:bg-accent transition-colors duration-300"></span>
                </span>

                <!-- Card -->
                <div class="service-card p-6 md:p-8 group/card">
                    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-4 relative z-10">
                        <div>
                            <h4 class="text-xl font-bold text-white group-hover/card:text-accent transition-colors">{item.degree}</h4>
                            <p class="text-muted font-medium mt-1">{item.school}</p>
                        </div>
                        <span class="inline-flex items-center px-3 py-1 bg-white/5 border border-white/10 text-xs font-mono text-accent whitespace-nowrap">
                            {item.date}
                        </span>
                    </div>

                    {item.description && <p class="text-muted-foreground leading-relaxed text-sm md:text-base mb-6 relative z-10">{item.description}</p>}
                    
                    {item.stats && (
                        <div class="relative z-10 pt-6 border-t border-white/5">
                            <div class="grid grid-cols-2 gap-4">
                                {item.stats.map((stat) => (
                                    <div class="flex flex-col">
                                        <span class="text-[10px] uppercase tracking-wider text-muted font-semibold mb-1">{stat.label}</span>
                                        <span class="text-lg font-mono text-white font-medium group-hover/card:text-accent transition-colors">{stat.value}</span>
                                    </div>
                                ))}
                            </div>
                        </div>
                    )}
                </div>
              </div>
            </BlurFade>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>
