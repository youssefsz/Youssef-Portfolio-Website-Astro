---
import Layout from "../layouts/Layout.astro";
import Footer from "../components/layout/Footer.astro";
import ProjectCard from "../components/ProjectCard.astro";
import { projects } from "../data/projects";
---

<Layout
    title="All Projects | Youssef Dhibi"
    description="Explore my portfolio of web and mobile applications - iOS, Android, and Web platforms built for performance and scale."
>
    <main class="min-h-screen">
        <!-- Page Header -->
        <section class="pt-24 pb-16 relative">
            <div class="absolute inset-0 grid-bg opacity-20"></div>

            <div class="container-main relative z-10">
                <!-- Back Link - Top Left, Visible -->
                <div>
                    <a
                        href="/"
                        class="inline-flex items-center gap-2 text-muted text-sm hover:text-accent transition-colors mb-12 group"
                    >
                        <svg
                            class="w-4 h-4 transform group-hover:-translate-x-1 transition-transform"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="square"
                                stroke-width="2"
                                d="M15 19l-7-7 7-7"></path>
                        </svg>
                        <span>Back to Home</span>
                    </a>
                </div>

                <!-- Centered Header Content - Bold & Impactful -->
                <div class="text-center">
                    <div>
                        <div class="number-display mb-4">
                            // {projects.length} Projects Available
                        </div>
                    </div>
                    <h1 class="display-lg mb-6">
                        <div>
                            <span class="block">All</span>
                            <span class="text-outline-hover">
                                <span class="outline-text">Projects</span>
                                <span class="filled-text" aria-hidden="true"
                                    >Projects</span
                                >
                            </span>
                        </div>
                    </h1>
                    <div>
                        <p class="text-muted text-lg max-w-2xl mx-auto">
                            A showcase of my work in mobile and web development.
                            Browse the complete catalog.
                        </p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Projects Grid Section - No divider needed, cleaner look -->
        <section class="py-20 relative">
            <div class="container-main relative z-10">
                <noscript>
                    <div class="grid gap-8 grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
                        {projects.map((project) => (
                            <div class="p-6 border rounded-lg">
                                <h2 class="text-xl font-bold mb-2"><a href={project.link}>{project.title}</a></h2>
                                <p class="mb-4">{project.description}</p>
                                <span class="text-sm text-gray-500">{project.category}</span>
                            </div>
                        ))}
                    </div>
                </noscript>
                <!-- Projects Grid - Adaptive layout -->
                <div class="projects-grid-full">
                    {
                        projects.map((project, index) => {
                            // Optimize delay for scrolling:
                            // First 6 items (likely above fold) get progressive stagger
                            // Subsequent items get minimal stagger based on column position
                            const isAboveFold = index < 6;
                            // Reduce base delay to 200ms for snappier feel
                            const delay = isAboveFold 
                                ? index * 100 + 200 
                                : (index % 3) * 100; 

                            return (
                                <div
                                    class="project-card-wrapper"
                                >
                                    <ProjectCard
                                        title={project.title}
                                        description={project.description}
                                        category={project.category}
                                        image={project.image}
                                        link={project.link}
                                        index={index}
                                    />
                                </div>
                            );
                        })
                    }
                </div>
            </div>
        </section>
    </main>

    <Footer />
</Layout>

<style>
    /* Projects grid - Flexbox for proper centering with any number of items */
    .projects-grid-full {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 1.5rem;
    }

    /* Each card has a max-width and grows flexibly */
    .projects-grid-full :global(.project-card-wrapper) {
        flex: 0 1 400px;
        max-width: 450px;
        min-width: min(100%, 320px);
    }

    .projects-grid-full :global(.project-card-wrapper > article) {
        height: 100%;
        width: 100%;
    }

    /* On mobile, full width */
    @media (max-width: 640px) {
        .projects-grid-full :global(.project-card-wrapper) {
            flex: 1 1 100%;
            max-width: 100%;
        }
    }

    .font-display {
        font-family: var(--font-display);
    }
</style>
