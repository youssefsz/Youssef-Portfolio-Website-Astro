---
import Layout from "../layouts/Layout.astro";

const pageTitle = "404: System Malfunction | Youssef Dhibi";
const pageDescription = "Error 404: The requested resource could not be found.";
---

<Layout title={pageTitle} description={pageDescription}>
    <main class="min-h-screen flex flex-col relative overflow-hidden">
        <!-- Background Elements -->
        <div class="absolute inset-0 grid-bg opacity-60"></div>

        <!-- Decorative Lines -->
        <div class="absolute left-8 top-1/3 hidden lg:block">
            <div class="w-px h-32 bg-gradient-to-b from-transparent via-white/80 to-transparent"></div>
        </div>

        <section class="relative flex-1 flex flex-col items-center justify-center pt-32 pb-20">
            <div class="container-main relative z-10 w-full max-w-4xl mx-auto px-4">



                <!-- Glitch Title -->
                <div class="text-center mb-12 relative">
                    <div>
                        <h1 class="glitch-text display-xl font-bold text-white relative inline-block" data-text="404">
                            404
                        </h1>
                    </div>
                    <div>
                        <div class="mt-4">
                            <p class="text-xl md:text-2xl text-white font-mono">
                                // LOST_IN_CYBERSPACE
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div>
                    <div class="flex flex-wrap gap-4 justify-center">
                        <a href="/" class="btn-primary group">
                            <span class="font-mono">./return_home.sh</span>
                        </a>
                        <a href="/projects" class="btn-secondary group">
                            <span class="font-mono">./view_projects.sh</span>
                        </a>
                    </div>
                </div>

            </div>
        </section>
    </main>
</Layout>

<style>
    /* Glitch Effect */
    .glitch-text {
        position: relative;
        animation: glitch-skew 1s cubic-bezier(0.25, 0.46, 0.45, 0.94) both infinite;
    }

    .glitch-text::before,
    .glitch-text::after {
        content: attr(data-text);
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: var(--background);
    }

    .glitch-text::before {
        left: 2px;
        text-shadow: -2px 0 #ff00c1;
        clip: rect(44px, 450px, 56px, 0);
        animation: glitch-anim 5s infinite linear alternate-reverse;
    }

    .glitch-text::after {
        left: -2px;
        text-shadow: -2px 0 #00fff9;
        clip: rect(44px, 450px, 56px, 0);
        animation: glitch-anim2 5s infinite linear alternate-reverse;
    }

    @keyframes glitch-skew {
        0% { transform: skew(0deg); }
        20% { transform: skew(-2deg); }
        40% { transform: skew(2deg); }
        60% { transform: skew(-1deg); }
        80% { transform: skew(1deg); }
        100% { transform: skew(0deg); }
    }

    @keyframes glitch-anim {
        0% { clip: rect(30px, 9999px, 10px, 0); }
        5% { clip: rect(80px, 9999px, 90px, 0); }
        10% { clip: rect(40px, 9999px, 10px, 0); }
        15% { clip: rect(10px, 9999px, 90px, 0); }
        20% { clip: rect(50px, 9999px, 20px, 0); }
        25% { clip: rect(20px, 9999px, 10px, 0); }
        30% { clip: rect(70px, 9999px, 60px, 0); }
        35% { clip: rect(30px, 9999px, 40px, 0); }
        40% { clip: rect(90px, 9999px, 10px, 0); }
        45% { clip: rect(10px, 9999px, 50px, 0); }
        50% { clip: rect(60px, 9999px, 30px, 0); }
        55% { clip: rect(20px, 9999px, 80px, 0); }
        60% { clip: rect(40px, 9999px, 10px, 0); }
        65% { clip: rect(80px, 9999px, 50px, 0); }
        70% { clip: rect(10px, 9999px, 30px, 0); }
        75% { clip: rect(50px, 9999px, 90px, 0); }
        80% { clip: rect(20px, 9999px, 60px, 0); }
        85% { clip: rect(70px, 9999px, 10px, 0); }
        90% { clip: rect(30px, 9999px, 50px, 0); }
        95% { clip: rect(60px, 9999px, 80px, 0); }
        100% { clip: rect(10px, 9999px, 40px, 0); }
    }

    @keyframes glitch-anim2 {
        0% { clip: rect(10px, 9999px, 90px, 0); }
        5% { clip: rect(50px, 9999px, 20px, 0); }
        10% { clip: rect(20px, 9999px, 60px, 0); }
        15% { clip: rect(70px, 9999px, 30px, 0); }
        20% { clip: rect(30px, 9999px, 10px, 0); }
        25% { clip: rect(90px, 9999px, 50px, 0); }
        30% { clip: rect(10px, 9999px, 80px, 0); }
        35% { clip: rect(60px, 9999px, 20px, 0); }
        40% { clip: rect(40px, 9999px, 70px, 0); }
        45% { clip: rect(80px, 9999px, 10px, 0); }
        50% { clip: rect(20px, 9999px, 50px, 0); }
        55% { clip: rect(50px, 9999px, 90px, 0); }
        60% { clip: rect(10px, 9999px, 30px, 0); }
        65% { clip: rect(70px, 9999px, 60px, 0); }
        70% { clip: rect(30px, 9999px, 10px, 0); }
        75% { clip: rect(90px, 9999px, 50px, 0); }
        80% { clip: rect(10px, 9999px, 80px, 0); }
        85% { clip: rect(60px, 9999px, 20px, 0); }
        90% { clip: rect(40px, 9999px, 70px, 0); }
        95% { clip: rect(80px, 9999px, 10px, 0); }
        100% { clip: rect(20px, 9999px, 50px, 0); }
    }

    /* Typing Cursor Animation */
    .typing-cursor {
        display: inline-block;
        width: 10px;
        height: 1.2em;
        background-color: var(--accent);
        animation: blink 1s step-end infinite;
        vertical-align: text-bottom;
    }

    @keyframes blink {
        0%, 100% { opacity: 1; }
        50% { opacity: 0; }
    }
</style>
